@model BotConstructor.Core.DTOs.ResetPasswordDto
@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Создание нового пароля</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Введите новый пароль для вашего аккаунта.</p>

                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input asp-for="Token" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Новый пароль</label>
                            <input asp-for="Password" type="password" class="form-control" autofocus />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Пароль должен содержать минимум 8 символов, включая заглавные и строчные буквы, цифры и специальные символы
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Подтверждение пароля</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">Сбросить пароль</button>
                        </div>

                        <div class="mt-3 text-center">
                            <a asp-action="Login" class="text-decoration-none">Вернуться к входу</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
