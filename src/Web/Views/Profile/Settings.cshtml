@model BotConstructor.Core.DTOs.UpdateSettingsDto
@{
    ViewData["Title"] = "Настройки";
}

<div class="row">
    <div class="col-md-3">
        <!-- Боковое меню -->
        <div class="list-group">
            <a asp-action="Index" class="list-group-item list-group-item-action">
                Профиль
            </a>
            <a asp-action="Edit" class="list-group-item list-group-item-action">
                Редактировать профиль
            </a>
            <a asp-action="ChangePassword" class="list-group-item list-group-item-action">
                Сменить пароль
            </a>
            <a asp-action="Settings" class="list-group-item list-group-item-action active">
                Настройки
            </a>
            <a asp-action="Sessions" class="list-group-item list-group-item-action">
                Активные сессии
            </a>
            <a asp-action="DeleteAccount" class="list-group-item list-group-item-action text-danger">
                Удалить аккаунт
            </a>
        </div>
    </div>

    <div class="col-md-9">
        <h2>Настройки</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card">
            <div class="card-body">
                <form asp-action="Settings" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <h5 class="mb-3">Уведомления</h5>

                    <div class="form-check mb-3">
                        <input asp-for="EmailNotificationsEnabled" class="form-check-input" type="checkbox" />
                        <label asp-for="EmailNotificationsEnabled" class="form-check-label">
                            Получать email уведомления
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="BotEventsNotifications" class="form-check-input" type="checkbox" />
                        <label asp-for="BotEventsNotifications" class="form-check-label">
                            Уведомления о событиях ботов
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="PaymentNotifications" class="form-check-input" type="checkbox" />
                        <label asp-for="PaymentNotifications" class="form-check-label">
                            Уведомления о платежах
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="NewsletterNotifications" class="form-check-input" type="checkbox" />
                        <label asp-for="NewsletterNotifications" class="form-check-label">
                            Новости платформы и акции
                        </label>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="SecurityNotifications" class="form-check-input" type="checkbox" />
                        <label asp-for="SecurityNotifications" class="form-check-label">
                            Уведомления безопасности (вход, смена пароля)
                        </label>
                    </div>

                    <hr />

                    <h5 class="mb-3">Региональные настройки</h5>

                    <div class="mb-3">
                        <label asp-for="Language" class="form-label">Язык интерфейса</label>
                        <select asp-for="Language" class="form-select">
                            <option value="ru">Русский</option>
                            <option value="en">English</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TimeZone" class="form-label">Часовой пояс</label>
                        <select asp-for="TimeZone" class="form-select">
                            <option value="Europe/Moscow">Москва (GMT+3)</option>
                            <option value="Europe/Kaliningrad">Калининград (GMT+2)</option>
                            <option value="Asia/Yekaterinburg">Екатеринбург (GMT+5)</option>
                            <option value="Asia/Novosibirsk">Новосибирск (GMT+7)</option>
                            <option value="Asia/Vladivostok">Владивосток (GMT+10)</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Сохранить настройки</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
