@model BotConstructor.Core.DTOs.UpdateProfileDto
@{
    ViewData["Title"] = "Редактирование профиля";
}

<div class="row">
    <div class="col-md-3">
        <!-- Боковое меню -->
        <div class="list-group">
            <a asp-action="Index" class="list-group-item list-group-item-action">
                Профиль
            </a>
            <a asp-action="Edit" class="list-group-item list-group-item-action active">
                Редактировать профиль
            </a>
            <a asp-action="ChangePassword" class="list-group-item list-group-item-action">
                Сменить пароль
            </a>
            <a asp-action="Settings" class="list-group-item list-group-item-action">
                Настройки
            </a>
            <a asp-action="Sessions" class="list-group-item list-group-item-action">
                Активные сессии
            </a>
            <a asp-action="DeleteAccount" class="list-group-item list-group-item-action text-danger">
                Удалить аккаунт
            </a>
        </div>
    </div>

    <div class="col-md-9">
        <h2>Редактирование профиля</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">Имя</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Фамилия</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="form-text">Если вы измените email, потребуется повторное подтверждение</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
